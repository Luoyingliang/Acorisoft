<Window x:Class="Acorisoft.Platform.Windows.Host.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Acorisoft.Platform.Windows.Host"
        mc:Ignorable="d"
        xmlns:w="https://github.com/Luoyingliang/Acorisoft"
        xmlns:g="clr-namespace:GraphShape.Controls;assembly=GraphShape.Controls"
        xmlns:powXaml="clr-namespace:Acorisoft.Morisa.Xaml;assembly=Acorisoft.Morisa.Integrating.PoW"
        xmlns:pow="clr-namespace:Acorisoft.Morisa.Documents;assembly=Acorisoft.Morisa.Integrating.PoW"
        Title="MainWindow" MinHeight="768" MinWidth="1280">
    <Window.Resources>
        <pow:Ability x:Key="Five" Rarity="{x:Static pow:AbilityRarity.Five}"/>
        <pow:Ability x:Key="Four" Rarity="{x:Static pow:AbilityRarity.Four}"/>
        <pow:Ability x:Key="three" Rarity="{x:Static pow:AbilityRarity.Three}"/>
        <pow:Ability x:Key="two" Rarity="{x:Static pow:AbilityRarity.Two}"/>
        <pow:Ability x:Key="one" Rarity="{x:Static pow:AbilityRarity.One}"/>
    </Window.Resources>
    <ScrollViewer>
        <StackPanel Background="#E1E1E1">

            <!-- 列表模式 -->

            <StackPanel Orientation="Horizontal" Margin="32 0">
                <powXaml:AbilityItemView AbilityName="天刑之刺天刑之刺天刑之刺天刑之刺天刑之刺天刑之刺天刑之刺天刑之刺" Rarity="{x:Static pow:AbilityRarity.One}" Margin="3"/>
                <powXaml:AbilityItemView AbilityName="天刑之刺" Rarity="{x:Static pow:AbilityRarity.Two}" Margin="3"/>
                <powXaml:AbilityItemView AbilityName="天刑之刺" Rarity="{x:Static pow:AbilityRarity.Three}" Margin="3"/>
                <powXaml:AbilityItemView AbilityName="天刑之刺" Rarity="{x:Static pow:AbilityRarity.Four}" Margin="3"/>
                <powXaml:AbilityItemView AbilityName="天刑之刺" Rarity="{x:Static pow:AbilityRarity.Five}" Margin="3"/>

                <Border CornerRadius="5" Background="White"
                        Height="800"
                        Width="640"
                        Margin="8"
                        Padding="16">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="144" />
                            <RowDefinition Height="1*" />
                        </Grid.RowDefinitions>

                        <!-- 图标与名称 -->
                        <DockPanel>
                            <Border Grid.Row="0" CornerRadius="5" Background="#9132C8" DockPanel.Dock="Left" Margin="0 0 8 0" Width="144">
                                <w:TilePanel>
                                    <Image x:Name="PART_Decorative" Source="{StaticResource Pow.Decorative.Three}"/>
                                    <Path Data="{StaticResource Pow.Sword.Cross}" Stretch="Uniform" Fill="#FFFFFF" Margin="32"/>
                                </w:TilePanel>
                            </Border>

                            <DockPanel DockPanel.Dock="Right" LastChildFill="True" Margin="16 0 0 0">

                                <TextBlock Grid.Row="0" Text="天刑之刺天刑之刺天刑之刺天刑之刺天刑之刺天刑之刺天刑之刺天刑之刺" TextWrapping="Wrap" 
                                           FontSize="23" FontFamily="{StaticResource App.Fonts.Regular}" TextTrimming="CharacterEllipsis"
                                           DockPanel.Dock="Top"
                                           Height="96"/>
                                
                                <powXaml:RarityView DockPanel.Dock="Bottom"
                                                    Height="32"
                                                    Rarity="{x:Static pow:AbilityRarity.Three}"
                                                    VerticalAlignment="Top"
                                                    HorizontalContentAlignment="Left"/>

                            </DockPanel>
                        </DockPanel>
                        
                        <!-- 内容 -->
                        <StackPanel Grid.Row="1">
                            <DockPanel Margin="0 8">
                                <TextBlock FontSize="20" Text="技能描述" DockPanel.Dock="Top" Margin="0 10"/>
                                <DockPanel Margin="0 8" DockPanel.Dock="Bottom">
                                    <TextBlock FontSize="16" Text="贪婪：" DockPanel.Dock="Left"/>
                                    <TextBlock FontSize="16"  Foreground="#969696" FontWeight="Light"
                                           Text="常规部分描述常规部分描述常规部分描述常规部分描述常规部分描述常规部分描述常规部分描述常规部分描述常规部分描述常规部分描述常规部分描述常规部分描述" 
                                           DockPanel.Dock="Right" TextAlignment="Left" TextWrapping="Wrap"/>
                                </DockPanel>
                            </DockPanel>
                            <DockPanel Margin="0 8">
                                <TextBlock FontSize="20" Text="解锁部分" DockPanel.Dock="Top" Margin="0 10"/>
                                <DockPanel Margin="0 8" DockPanel.Dock="Bottom">
                                    <TextBlock FontSize="16" Text="贪婪：" DockPanel.Dock="Left"/>
                                    <TextBlock FontSize="16"  Foreground="#969696" FontWeight="Light"
                                           Text="常规部分描述常规部分描述常规部分描述常规部分描述常规部分描述常规部分描述常规部分描述常规部分描述常规部分描述常规部分描述常规部分描述常规部分描述" 
                                           DockPanel.Dock="Right" TextAlignment="Left" TextWrapping="Wrap"/>
                                </DockPanel>
                            </DockPanel>
                            <DockPanel Margin="0 8">
                                <TextBlock FontSize="20" Text="进化部分" DockPanel.Dock="Top" Margin="0 10"/>
                                <DockPanel Margin="0 8" DockPanel.Dock="Bottom">
                                    <TextBlock FontSize="16" Text="贪婪：" DockPanel.Dock="Left"/>
                                    <TextBlock FontSize="16"  Foreground="#969696" FontWeight="Light"
                                           Text="常规部分描述常规部分描述常规部分描述常规部分描述常规部分描述常规部分描述常规部分描述常规部分描述常规部分描述常规部分描述常规部分描述常规部分描述" 
                                           DockPanel.Dock="Right" TextAlignment="Left" TextWrapping="Wrap"/>
                                </DockPanel>
                            </DockPanel>
                            <DockPanel Margin="0 8">
                                <TextBlock FontSize="20" Text="领域部分" DockPanel.Dock="Top" Margin="0 10"/>
                                <DockPanel Margin="0 8" DockPanel.Dock="Bottom">
                                    <TextBlock FontSize="16" Text="贪婪：" DockPanel.Dock="Left"/>
                                    <TextBlock FontSize="16"  Foreground="#969696" FontWeight="Light"
                                           Text="常规部分描述常规部分描述常规部分描述常规部分描述常规部分描述常规部分描述常规部分描述常规部分描述常规部分描述常规部分描述常规部分描述常规部分描述" 
                                           DockPanel.Dock="Right" TextAlignment="Left" TextWrapping="Wrap"/>
                                </DockPanel>
                            </DockPanel>
                            <DockPanel Margin="0 8">
                                <TextBlock FontSize="20" Text="代价" DockPanel.Dock="Top" Margin="0 10"/>
                                <TextBlock FontSize="16"  Foreground="#969696" FontWeight="Light"
                                           Text="常规部分描述常规部分描述常规部分描述常规部分描述常规部分描述常规部分描述常规部分描述常规部分描述常规部分描述常规部分描述常规部分描述常规部分描述" 
                                           DockPanel.Dock="Bottom" TextAlignment="Left" TextWrapping="Wrap"/>
                            </DockPanel>
                           
                        </StackPanel>
                    </Grid>
                </Border>
            </StackPanel>

            <powXaml:AbilityListItemView AbilityName="天刑之刺天刑之刺天刑之刺天刑之刺天刑之刺天刑之刺天刑之刺天刑之刺" Rarity="{x:Static pow:AbilityRarity.One}" Margin="3"/>
            <powXaml:AbilityListItemView AbilityName="天刑之刺" Rarity="{x:Static pow:AbilityRarity.Two}" Margin="3"/>
            <powXaml:AbilityListItemView AbilityName="天刑之刺" Rarity="{x:Static pow:AbilityRarity.Three}" Margin="3"/>
            <powXaml:AbilityListItemView AbilityName="天刑之刺" Rarity="{x:Static pow:AbilityRarity.Four}" Margin="3"/>
            <powXaml:AbilityListItemView AbilityName="天刑之刺" Rarity="{x:Static pow:AbilityRarity.Five}" Margin="3"/>
        </StackPanel>
    </ScrollViewer>
</Window>
